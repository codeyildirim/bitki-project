{
  "cleanUrls": true,
  "trailingSlash": false,
  "env": {
    "VITE_API_BASE_URL": "https://bitki-backend.onrender.com",
    "VITE_PUBLIC_DOMAIN": "https://bitki-project.vercel.app",
    "VITE_ADMIN_DOMAIN": "https://bitki-admin.vercel.app"
  },
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/admin.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/admin.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}