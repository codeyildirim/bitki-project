{
  "buildCommand": "npm run build:admin",
  "outputDirectory": "dist-admin",
  "framework": "vite",
  "cleanUrls": true,
  "trailingSlash": false,
  "env": {
    "VITE_API_BASE_URL": "https://bitki-project.onrender.com",
    "VITE_ADMIN": "true"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}